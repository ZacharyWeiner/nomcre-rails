<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group has-feedback">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Company Name' %>
    <span class='glyphicon glyphicon-user form-control-feedback'></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.file_field :profile_image, class: 'form-control' %>
    <span class='glyphicon glyphicon-picture form-control-feedback'></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.text_field :phone, class: 'form-control', placeholder: 'Company Phone Number' %>
    <span class='glyphicon glyphicon-phone form-control-feedback'></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.text_field :website, class: 'form-control', placeholder: 'Website - www.example.com' %>
    <span class='glyphicon glyphicon-globe form-control-feedback'></span>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
