<%= form_for message, remote: true, authenticity_token: true do |f| %>
  <%= f.label :your_message %>:
  <%= f.text_area :content, class: "form-control" %>
  <!-- <label class='fa fa-camera fa-2x' style='vertical-align: middle; '> -->
    <%= f.file_field :file, id: :message_file %>
  <!-- </label> -->
  <%= f.hidden_field :chatroom_id, value: chatroom.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"} %>
<% end %>
