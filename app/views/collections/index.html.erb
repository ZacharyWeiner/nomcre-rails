<% @collections.each do |collection| %>
  <div class='row'>
    <div class='row text-center'>
      <h3><%= collection.title %></h3>
    </div>
    <div class='col-md-10'>
      <div class='row'>
        <% collection.collection_items.take(4).each do |item| %>
          <div class='col-md-3' >
            <%= image_tag item.file, class: 'img-responsive' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class='col-md-2'>
      <%= link_to 'Add To Collection', new_collection_collection_item_path(collection), class: 'btn btn-warning btn-block' %>
      <%= link_to 'View', collection, class: 'btn btn-primary btn-block' %>
      <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %>
    </div>
  </div>
<% end %>
<br>

<%= link_to 'New Collection', new_collection_path %>
