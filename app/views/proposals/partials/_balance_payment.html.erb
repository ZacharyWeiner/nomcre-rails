<section class="invoice">
      <!-- title row -->
      <div class="row">
        <div class="col-xs-12">
          <h2 class="page-header">
            <i class="fa fa-globe"></i> Nomadic Creative
            <small class="pull-right">Date: <%= Date.today %></small>
          </h2>
        </div>
        <!-- /.col -->
      </div>
      <!-- info row -->
      <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
          From
          <address>
            <strong>Nomadic Creative</strong><br>
            795 Folsom Ave, Suite 600<br>
            San Francisco, CA 94107<br>
            Phone: (804) 123-5432<br>
            Email: finance@nomcre.com
          </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          To
          <address>
            <strong><%= @proposal.company.name %></strong><br>
            795 Folsom Ave, Suite 600<br>
            San Francisco, CA 94107<br>
            Phone: (555) 539-1037<br>
            Email: <%= @proposal.company.users.first.email %>
          </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
          <b>Invoice #007612</b><br>
          <br>
          <b>Order ID:</b> 4F3S8J<br>
          <b>Payment Due:</b> 2/22/2014<br>
          <b>Account:</b> 968-34567
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <!-- Table row -->
      <div class="row">
        <div class="col-xs-12 table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Title</th>
              <th>Deadline</th>
              <th>Type</th>
              <th>Location</th>
              <th>Subtotal</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td><%= @proposal.title %></td>
              <td><%= @proposal.deadline %></td>
              <td><%= @proposal.proposal_type %></td>
              <td><%= @proposal.location.name %></td>
              <td>$<%= @proposal.price * 0.99 %> USD</td>
            </tr>
            </tbody>
          </table>
            </tbody>
          </table>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <div class="row">
        <!-- accepted payments column -->
        <div class="col-xs-6">
          <p class="lead">Payment Methods:</p>
          <i class='fa fa-cc-visa fa-3x'></i>
          <i class='fa fa-cc-mastercard fa-3x'></i>
          <i class='fa fa-cc-amex fa-3x'></i>


          <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
            Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem plugg
            dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
          </p>
        </div>
        <!-- /.col -->
        <div class="col-xs-6">
          <p class="lead"><%= Date.today %></p>

          <div class="table-responsive">
            <table class="table">
              <tbody><tr>
                <th style="width:50%">Subtotal:</th>
                <td>$<%= @proposal.price * 0.99 %> USD</td>
              </tr>
            </tbody></table>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

      <!-- this row will not appear when printing -->
      <div class="row no-print">
        <div class="col-xs-12">
          <!-- <a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a> -->
          <!-- <button type="button" class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Submit Payment
          </button> -->
          <div class='pull-right'>
            <% if @proposal.paid == false || @proposal.paid == nil%>
              <%= form_tag proposal_balance_path(@proposal) do %>
                <article>
                  <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                  <% end %>
                </article>
                <% @stripe_price = ((@proposal.price - (@proposal.price * 0.01)) * 100)%>
                <form action="/charge" method="POST">
                  <%= hidden_field_tag 'proposal_id', @proposal.id %>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button pull-right"
                  Stripe.setPublishableKey('PUBLISHABLE_KEY');
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-description="Proposal Payment"
                  data-amount="<%= @stripe_price %>"
                  data-locale="auto"></script>
                </form>
              <% end %>
            <% else %>
              <%= link_to 'Paid', root_path, class: 'btn btn-success disabled'%>
            <% end %>
          </div>
          <!-- <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
            <i class="fa fa-download"></i> Generate PDF
          </button> -->
        </div>
      </div>
    </section>

