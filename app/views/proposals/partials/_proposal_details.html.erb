<div class="box box-solid">
  <div class='row'>
    <div class='col-md-6'>
      <div class="panel box box-primary">
        <div class="box-header with-border">
          <h4 class="box-title">Focus Points</h4>
        </div>
        <div class="box-body">
         <ul>
         <% @proposal.focus_points.each do  |fp| %>
          <li><%= fp %></li>
         <% end %>
       </ul>
        </div>
      </div>
      <div class="panel box box-primary">
        <div class="box-header with-border">
          <h4 class="box-title">Background / TOD</h4>
        </div>
        <div class="box-body">
          <strong>Background</strong><%= @proposal.background %>
          <hr>
          <strong>Time Of Day </strong><%= @proposal.time_of_day %>
        </div>
      </div>
    </div>
    <div class='col-md-6'>
      <div class="panel box box-primary">
        <div class="box-header with-border">
          <h4 class="box-title">Behind The Scenes</h4>
        </div>
        <div class="box-body">
           <ul>
             <% @proposal.bts.each do |bts| %>
             <li> <%= bts %> </li>
             <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% if current_user.company == @proposal.company %>
      <%= link_to "Edit", proposal_edit_details_path(@proposal), class: 'pull-right' unless  @proposal.company.users.include?(current_user) == false %>
    <% end %>
</div>

