<%= form_for(location) do |f| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :parent %>
    <%= f.collection_select(:parent_id, Location.where(location_type: ["Region", "Country"]).order(:name), :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :location_type %>
    <%= f.select :location_type, options_for_select([['Country' ,'Country'], ['City', 'City']]) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
