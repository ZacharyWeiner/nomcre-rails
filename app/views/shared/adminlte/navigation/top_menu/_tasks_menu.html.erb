<% @notifications = Notification.where(user: current_user).where(read:false).where(notification_type: "Task") %>
 <li class="dropdown tasks-menu">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-flag-o"></i>
    <% unless @notifications.count == 0 %>
      <span class="label label-danger"><%= @notifications.count %></span>
    <% end %>
  </a>
  <ul class="dropdown-menu">
    <li class="header">You have <%= @notifications.count %> New Tasks</li>
    <li>
        <!-- inner menu: contains the actual data -->
        <ul class="menu">
          <% @notifications.each do |note| %>
          <li><!-- Task item -->
            <%= link_to tasks_path do %>
              <h3>
                You Have New Tasks For <%= Proposal.find(note.notification_obeject_id).title %>
              </h3>
              <div class="progress xs">
                <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar"
                aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                  <span class="sr-only">0% Complete</span>
                </div>
              </div>
            <% end %>
          </li>
          <% end %>
          <!-- end task item -->
        <!-- end task item -->
        </ul>
    </li>
    <li class="footer">
      <%= link_to "View all tasks", tasks_path %> </a>
    </li>
  </ul>
</li>
